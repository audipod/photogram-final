<h1> List of users </h1>


<% if flash[:notice].present? %>
  <p class="flash-notice"><%= flash[:notice] %></p>
<% end %>

<% if flash[:alert].present? %>
  <p class="flash-alert"><%= flash[:alert] %></p>
<% end %>



<table border ="1">
  <tr>
    <th>
      Username
    </th>

    <th>
      Private?
    </th>

    <th>
      
    </th>

  </tr>

  <% @list_of_users.each do |a_user| %>
    <tr>

      <td>
        <%= a_user.username %>
      </td>

      <td>
  <% if a_user.private == true %>
    <%= "Yes" %>
  <% else %>
    <%= "No" %>
  <% end %>
</td>


      <td>
        <a href="/users/<%= a_user.username %>">Show details 
        </a>
      </td>

    </tr>
  <% end %>
</table>
